generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Operation {
  id                    String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  totalBatches          Int      @default(0)
  totalBatchesCompleted Int      @default(0)
  totalBatchesFailed    Int      @default(0)
  totalBatchesPending   Int      @default(0)
  startBlock            Int      @default(0)
  endBlock              Int      @default(0)
  lastBlock             Int      @default(0)
  batchSize             Int      @default(100)
  lastProcessedBlock    Int      @default(0)
  totalBlocks           Int      @default(0)
  status                String   @default("pending")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  batches               Batch[]
}

model Batch {
  id          String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  operationId String    @db.Uuid // Add @db.Uuid here to match the Operation id type
  operation   Operation @relation(fields: [operationId], references: [id])
  startBlock  Int
  endBlock    Int
  status      String    @default("pending")
  count       Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
